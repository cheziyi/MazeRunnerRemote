<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnViewPersistent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display String 1" />

        <Button
            android:id="@+id/btnViewPersistent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="20dp"
            android:text="Display String 2" />

        <EditText
            android:id="@+id/textString1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:ems="10"
            android:layout_row="1"
            />

        <Button
            android:id="@+id/btnPersistent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginBottom="20dp"
            android:text="Update String 1" />

        <EditText
            android:id="@+id/textString2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_weight="1"
            android:ems="10"
            />

        <Button
            android:id="@+id/btnPersistent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:text="Update String 2" />



    </GridLayout>
</LinearLayout>
